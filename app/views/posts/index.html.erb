<%= provide(:page_title, 'Main Page') %>

<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th style="text-align: center">Title</th>
      <th style="text-align: center">Body</th>
      <th style="text-align: center">Author</th>
      <th style="text-align: center">Comments</th>
      <th style="text-align: center">Posted</th>
      <th colspan="3" style="text-align: center">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.username %></td>
        <td style="text-align: center"><%= post.comments.count %></td>
        <td><%= time_ago_in_words(post.created_at) %> ago</td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, :class => 'delete_post' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
